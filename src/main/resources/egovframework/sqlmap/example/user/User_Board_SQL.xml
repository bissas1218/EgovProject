<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="UserBoard">

	<typeAlias  alias="egovMap" type="org.egovframe.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="normalBoardVO" type="egovframework.example.sample.service.NormalBoardVO"/>
	<typeAlias  alias="photoBoardVO" type="egovframework.user.service.PhotoBoardVO"/>
	<typeAlias  alias="videoBoardVO" type="egovframework.user.service.VideoBoardVO"/>
	
	<select id="userBoardDAO.selectNewNormalBoardId" resultClass="String">
    	<![CDATA[
    		SELECT IFNULL(MAX(RIGHT(NOR_BRD_ID, 7)) + 1, 1) FROM NORMAL_BOARD
    	]]>
    </select>
    
	<insert id="userBoardDAO.insertNormalBoard" parameterClass="normalBoardVO">
		<![CDATA[
			INSERT INTO NORMAL_BOARD 
				( NOR_BRD_ID
				  , BOARD_ID
				  , POST_TITLE
				  , POST_CONTENT
				  , REG_DATE
				   )
			VALUES ( #norBrdId#
				  , #boardId#
				  , #postTitle#
				  , #postContent#
				  , NOW() 
				  )
		]]>
	</insert>
	
	<select id="userBoardDAO.selectNormalBoardList" parameterClass="searchVO" resultClass="normalBoardVO">

			SELECT
					NOR_BRD_ID norBrdId
				  , BOARD_ID boardId
				  , POST_TITLE postTitle
				  , REG_DATE regDate
			FROM NORMAL_BOARD
			WHERE BOARD_ID = #boardId#
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				POST_TITLE LIKE CONCAT('%', #searchKeyword#, '%')
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				POST_CONTENT LIKE CONCAT('%', #searchKeyword#, '%')
			</isEqual>
			ORDER BY NOR_BRD_ID DESC
			LIMIT #recordCountPerPage# OFFSET #firstIndex#		
			
	</select>
	
	<select id="userBoardDAO.selectNormalBoardListTotCnt" parameterClass="searchVO" resultClass="int">

			SELECT COUNT(*) totcnt
			FROM NORMAL_BOARD
			WHERE BOARD_ID = #boardId#
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				POST_TITLE LIKE CONCAT('%', #searchKeyword#, '%')
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				POST_CONTENT LIKE CONCAT('%', #searchKeyword#, '%')
			</isEqual>
			
	</select>
	
	<select id="userBoardDAO.selectNormalBoard" parameterClass="normalBoardVO" resultClass="normalBoardVO">
		<![CDATA[
			SELECT  A.NOR_BRD_ID norBrdId
				  , A.BOARD_ID boardId
				  , A.POST_TITLE postTitle
				  , A.POST_CONTENT postContent
				  , A.REG_DATE regDate
				  , B.BOARD_NM boardNm
				  , B.BOARD_DESCR_YN boardDescrYn
				  , B.BOARD_DESCR boardDescr
			FROM NORMAL_BOARD A, BOARD B
			WHERE A.BOARD_ID = B.BOARD_ID 
				AND A.NOR_BRD_ID = #norBrdId#
			]]>	
	</select>
	
	<update id="userBoardDAO.updateNormalBoard" parameterClass="normalBoardVO">
		<![CDATA[
			UPDATE NORMAL_BOARD SET
				 POST_TITLE = #postTitle#
				,POST_CONTENT = #postContent#
				WHERE NOR_BRD_ID = #norBrdId#
		]]>
	</update>
	
	<select id="userBoardDAO.selectNewPhotoBoardId" resultClass="String">
    	<![CDATA[
    		SELECT IFNULL(MAX(RIGHT(PHOTO_ID, 7)) + 1, 1) FROM PHOTO_BOARD
    	]]>
    </select>
    
	<insert id="userBoardDAO.insertPhotoUpload" parameterClass="photoBoardVO">
		<![CDATA[
			INSERT INTO PHOTO_BOARD (
				 PHOTO_ID
				,SAVE_NM
				,TYPE
				,SIZE
				,REAL_NM
				,SAVE_PATH
				,BOARD_ID
				,TITLE
				,DESCR
				,REG_DATE
			) VALUES (
				 #photoId#
				,#saveNm#
				,#type#
				,#size#
				,#realNm#
				,#savePath#
				,#boardId#
				,#title#
				,#descr#
				,NOW()
			)
		]]>
	</insert>
	
	<select id="userBoardDAO.selectPhotoBoardList" resultClass="photoBoardVO" parameterClass="String">
		<![CDATA[
			SELECT   PHOTO_ID boardId
					,SAVE_NM saveNm
					,TYPE type
					,SIZE size
					,REAL_NM realNm
					,SAVE_PATH savePath
					,BOARD_ID boardId
					,TITLE title
					,DESCR descr
					,REG_DATE regDate
			FROM PHOTO_BOARD
				WHERE BOARD_ID = #boardId#
		]]>
	</select>
	
	<select id="userBoardDAO.selectNewVideoBoardId" resultClass="String">
    	<![CDATA[
    		SELECT IFNULL(MAX(RIGHT(VIDEO_ID, 7)) + 1, 1) FROM VIDEO_BOARD
    	]]>
    </select>
    
	<insert id="userBoardDAO.insertVideoUpload" parameterClass="videoBoardVO">
		<![CDATA[
			INSERT INTO VIDEO_BOARD (
				 VIDEO_ID
				,SAVE_NM
				,TYPE
				,SIZE
				,REAL_NM
				,SAVE_PATH
				,BOARD_ID
				,TITLE
				,DESCR
				,REG_DATE
			) VALUES (
				 #videoId#
				,#saveNm#
				,#type#
				,#size#
				,#realNm#
				,#savePath#
				,#boardId#
				,#title#
				,#descr#
				,NOW()
			)
		]]>
	</insert>
	
	<select id="userBoardDAO.selectVideoBoardList" resultClass="videoBoardVO" parameterClass="String">
		<![CDATA[
			SELECT   VIDEO_ID videoId
					,SAVE_NM saveNm
					,TYPE type
					,SIZE size
					,REAL_NM realNm
					,SAVE_PATH savePath
					,BOARD_ID boardId
					,TITLE title
					,DESCR descr
					,REG_DATE regDate
			FROM VIDEO_BOARD
				WHERE BOARD_ID = #boardId#
		]]>
	</select>
	
</sqlMap>