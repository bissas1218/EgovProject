<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>

    <formset>
    
        <form name="sampleVO">
        	<field property="name" depends="required">
        		<arg0 key="title.sample.name" />
			</field>
			<field property="description" depends="required">
                <arg0 key="title.sample.description" />
            </field>
        	<field property="regUser" depends="required">
        		<arg0 key="title.sample.regUser" />
			</field>
        </form>
        
        <form name="menuVO">
       		<field property="menuNm" depends="required">
       			<arg0 key="title.menu.menuNm" />
       		</field>
       	</form>
       
       	<form name="boardVO">
       		<field property="boardNm" depends="required">
       			<arg0 key="title.board.boardNm" />
       		</field>
       	</form>
       	
       	<form name="normalBoardVO">
       		<field property="postTitle" depends="required">
       			<arg0 key="title.board.postTitle" />
       		</field>
       		<field property="postContent" depends="required">
       			<arg0 key="title.board.postContent" />
       		</field>
       	</form>
       	
    </formset>
    
</form-validation>